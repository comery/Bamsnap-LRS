#!/usr/bin/env python3

"""
Command-line entry point for Bamsnap-LRS.

This script allows running the tool directly, e.g.:

  bamsnap-lrs dna --bam example.bam --pos chr1:1000-2000 --out out.svg
  bamsnap-lrs rna --bam example.bam --pos chr1:1000-2000 --out out.svg

Make sure this file is executable:
  chmod +x bin/bamsnap-lrs
and either call it with an explicit path:
  ./bin/bamsnap-lrs ...
or add it to your PATH.
"""

import sys
import os

# Add the src directory to Python path so we can import bamsnap_lrs
# Get the directory containing this script
script_dir = os.path.dirname(os.path.abspath(__file__))
# Get the project root (parent of bin directory)
project_root = os.path.dirname(script_dir)
# Add src directory to path
src_dir = os.path.join(project_root, 'src')
if src_dir not in sys.path:
    sys.path.insert(0, src_dir)

from bamsnap_lrs.cli import main


if __name__ == "__main__":
    main()


